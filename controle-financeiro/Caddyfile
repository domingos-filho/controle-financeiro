# Redireciona www para o domínio raiz
www.domingos-automacoes.shop {
    redir https://domingos-automacoes.shop{uri}
}

# Domínio principal
domingos-automacoes.shop {
    encode gzip

    # Frontend (padrão)
    reverse_proxy frontend:80

    # Backend (API)
    handle_path /api/* {
        reverse_proxy backend:8000
    }
}
